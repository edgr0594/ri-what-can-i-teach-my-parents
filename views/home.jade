extends layout

block content
  h1 What I can teach my parents...
  #new-note
  form.form-horizontal(id='new-note-form', method='POST')
    input(type='hidden', name='_csrf', value=token)
    .form-group
      .col-sm-3.control-label(for='noteText') Answer
      .col-sm-7
        textarea.form-control(type='text', name='noteText', id='noteText', placeholder='I can teach...', autofocus)
    .form-group
      label.col-sm-3.control-label(for='twitterHandle') Name
      .col-sm-7
        input.form-control(type='text', name='twitterHandle', id='twitterHandle', placeholder='First name', autofocus)
     .form-group
      .col-sm-offset-3.col-sm-7
        button.btn.btn-success(type='submit')
          i.fa.fa-check
              | Send
  ul.notes

